package application;

import java.util.ArrayList;
import java.util.List;

public class Program {

	public static void main(String[] args) {
		List<String> list = new ArrayList<>();

		list.add("Maria");
		list.add("Alex");
		list.add("Bob");
		list.add("Anna");
		list.add(2, "Marco");
		list.remove(1);

		System.out.println(list.size());

		for (String cha : list) {
			System.out.println(cha);
		}

		System.out.println("=====================");
		list.removeIf(x -> x.charAt(0) == 'M');
		for (String cha : list) {
			System.out.println(cha);
		}
		
		System.out.println("=====================");
		System.out.println("Index of: " + list.indexOf("Anna"));
		System.out.println("Index of: " + list.indexOf("Chaulin"));

	}
}
